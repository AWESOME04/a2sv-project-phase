@model BlogApp.Models.CommentEntity

<h1>Edit Comment</h1>

<form asp-action="UpdateComment" method="post">
    <input type="hidden" asp-for="CommentId" />
    <div class="form-group">
        <label asp-for="Text">Comment</label>
        <textarea class="form-control" asp-for="Text" rows="3" required>@Model.Text</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
